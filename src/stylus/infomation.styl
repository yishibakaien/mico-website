html, body, div, h4, p, ul {
    margin: 0;
    padding: 0;
}

body {
    width: 100%;
}

h4 {
    color: #00b5f7;
    margin-top: 16px;
    margin-bottom: 16px;
}

ul {
    list-style: none;
}
.wrapper {
    padding: 12px;
}

#companyProfile{
    color: #999;
    font-size: 14px;
    text-indent: 2rem;
    margin: 0 8px 0 8px;
}

.table {
    overflow: hidden;
    margin: 0 auto;
}

.table li {
    font-size: 12px;
    height: 50px;
    line-height: 50px;
    display: inline-block;
    float: left;
    box-sizing: border-box;
    border-bottom: 3px solid #fff;
    border-right: 3px solid #fff;
}

.table li:nth-child(odd){
    width: 19%;
    color: #fff;
    text-align: center;
    background-color: #00b5f6;
    
}

.table li:nth-child(even){
    width: 31%;
    color: #666;
    text-align: left;
    background-color: #c4efff;
    padding-left: 4px;
}

.address-container {
    margin: 0 auto;
    font-size: 12px;
    background-color: #00b5f6;
    display: flex;
}

.address-container .address-item {
    color: #fff;
    width: 19%;
    background-color: #00b5f6;
    text-align: center;
    box-sizing: border-box; 
    border-right: 3px solid #fff;
    padding: 17px 0;
    }

.address-container .address-outer {
    width: 81%;
    color: #666;
    min-height: 50px;
    max-height: 58px;
    height: auto;
    text-align: left;
    background-color: #c4efff;
    padding: 17px 0;
    padding-left: 4px;
    box-sizing: border-box;
    border-right: 3px solid #fff;
}

.address-outer .address{
    overflow: hidden;
    line-height: 16px;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.telephone-container{
    display: flex;
    position: relative;
}

.telephone-container #phone{
    height: 21px;
    font-size: 18px;
    color: #666;
    position: absolute;
    top: 15px;
    left: 75px;
}

.telephone-container .phone-tip {
    font-size: 12px;
    color: #999;
    position: absolute;
    top: 18px;
    left: 190px;
}
